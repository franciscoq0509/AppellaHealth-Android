<resources
>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/Menu.Text</item>
        <item name="android:fontFamily">@font/helveticaasd</item>
        <item name="fontFamily">@font/helveticaasd</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullscreenTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    </style>

    <style name="toolbarStyleCustom" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/toolbarThemeCustom</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleTextCustom</item>
        <item name="android:background">@drawable/bg_gradient</item>
    </style>
    <style name="toolbarStyleTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/toolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:background">@color/theme</item>
    </style>

    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="toolbarThemeCustom" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:layout_height">@dimen/actionBarSize</item>
        <item name="android:minHeight">@dimen/actionBarSize</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/helveticaasd</item>
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleTextCustom" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/helveticaasd</item>
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Menu.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helveticaasd</item>
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme</item>
        <item name="android:textColorPrimary">@color/theme</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
